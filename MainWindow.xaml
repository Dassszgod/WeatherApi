<Window x:Class="WeatherApi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApi"
        mc:Ignorable="d"
        Title="WeatherApi"
        Height="600" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        KeyDown="Window_KeyDown"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded">
    <Border CornerRadius="52">
        <Border.Background>
            <ImageBrush x:Name="BackgroundBrush" ImageSource="sunWeather.png"/>
        </Border.Background>

        <Canvas x:Name="MainCanva" Visibility="Visible">

            <Grid Width="400" HorizontalAlignment="Center" Height="154" VerticalAlignment="Center" >
                <TextBlock x:Name="MyLocation" TextWrapping="Wrap" Text="My Location" Height="23" FontSize="16" FontFamily="Yu Gothic UI Light" Padding="27, 0" Margin="136,22,128,109"/>
                <TextBlock x:Name="LocationText" TextWrapping="Wrap" Text="Kyiv" FontSize="48" FontFamily="Yu Gothic UI" Padding="27, 0" Margin="132,32,70,58"/>
                <TextBlock x:Name="TemperatureText" TextWrapping="Wrap" Text="25°" FontSize="72" FontFamily="Yu Gothic UI" Padding="27, 0" RenderTransformOrigin="0.565,0.507" Margin="132,76,52,-32"/>
                <TextBlock x:Name="WeatherText" TextWrapping="Wrap" Text="Sunny" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Padding="25, 0" Margin="152,161,128,-37"/>
                <TextBlock x:Name="HigherTemperatureText" TextWrapping="Wrap" Text="H: " Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Padding="25, 0" Margin="138,191,174,-67"/>
                <TextBlock x:Name="LowerTemperatureText" TextWrapping="Wrap" Text="L: " Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Padding="25, 0" Margin="190,191,110,-67"/>
            </Grid>

            <Grid Canvas.Top="223" HorizontalAlignment="Center" Height="377" VerticalAlignment="Top" Width="400" Visibility="Visible">
                <Rectangle x:Name="WeatherRectangle" Width="380" Height="250" Margin="10,10,10,117" Fill="#FF4591B8" RadiusY="20" RadiusX="20" OpacityMask="Black" Opacity="0.5"/>
                <TextBlock x:Name="WeatherDescriptionText" HorizontalAlignment="Left" Margin="20,18,0,0" TextWrapping="Wrap" Text="Cloudy skies throughout the day with early morning rain." VerticalAlignment="Top" Height="54" Width="370" FontFamily="Yu Gothic UI Light" FontSize="18"/>
                <Rectangle HorizontalAlignment="Center" Height="1" Margin="0,72,0,0" Stroke="Black" VerticalAlignment="Top" Width="358"/>
                <TextBlock x:Name="TodaysDate" TextWrapping="Wrap" Text="Today's date" Height="23" FontSize="16" FontFamily="Yu Gothic UI Light" Padding="27, 0" Margin="132,265,122,89"/>
                <TextBlock x:Name="DateText" TextWrapping="Wrap" Text="2025-05-25" Height="23" FontSize="16" FontFamily="Yu Gothic UI" Padding="30, 0" Margin="132,293,122,61"/>


                <Grid Visibility="Visible" x:Name="OneToThirteenHoursGrid">
                    <Image x:Name="ZeroHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="24,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="ZeroHoursText" TextWrapping="Wrap" Text="00:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="27,134,329,213" />
                    <Image x:Name="OneHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="76,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="OneHoursText" TextWrapping="Wrap" Text="01:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="78,134,278,213" />
                    <Image x:Name="TwoHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="124,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="TwoHoursText" TextWrapping="Wrap" Text="02:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="126,134,230,213" />
                    <Image x:Name="ThreeHoursImage" Source="sunny.png" HorizontalAlignment="Center" Height="50" Margin="0,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="ThreeHoursText" TextWrapping="Wrap" Text="03:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="178,134,178,213" />
                    <Image x:Name="FourHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="224,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="FourHoursText" TextWrapping="Wrap" Text="04:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="228,134,128,213" />
                    <Image x:Name="FiveHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="276,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="FiveHoursText" TextWrapping="Wrap" Text="05:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="278,134,78,213" />
                    <Image x:Name="SixHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="326,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="SixHoursText" TextWrapping="Wrap" Text="06:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="328,134,28,213" />
                    <Image x:Name="SevenHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="26,168,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="SevenHoursText" TextWrapping="Wrap" Text="07:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="28,218,328,129" />
                    <Image x:Name="EightHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="76,168,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="EightHoursText" TextWrapping="Wrap" Text="08:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="80,218,276,129" />
                    <Image x:Name="NineHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="124,168,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="NineHoursText" TextWrapping="Wrap" Text="09:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="128,218,228,129" />
                    <Image x:Name="TenHoursImage" Source="sunny.png" HorizontalAlignment="Center" Height="50" Margin="0,168,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="TenHoursText" TextWrapping="Wrap" Text="10:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="178,218,178,129" />
                    <Image x:Name="ElevenHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="226,168,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="ElevenHoursText" TextWrapping="Wrap" Text="11:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="230,218,126,129" />
                    <Image x:Name="TwelveHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="278,168,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="TwelveHoursText" TextWrapping="Wrap" Text="12:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="280,218,76,129" />
                    <Image x:Name="ThirteenHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="326,168,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="ThirteenHoursText" TextWrapping="Wrap" Text="13:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="328,218,28,129" />
                </Grid>
                <Grid Visibility="Hidden" x:Name="FourteenToTwentyThreeHoursGrid">
                    <Image x:Name="FourteenHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="24,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="FourteenHoursText" TextWrapping="Wrap" Text="14:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="27,134,329,213" />
                    <Image x:Name="FifteenHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="76,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="FifteenHoursText" TextWrapping="Wrap" Text="15:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="78,134,278,213" />
                    <Image x:Name="SixteenHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="124,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="SixteenHoursText" TextWrapping="Wrap" Text="16:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="126,134,230,213" />
                    <Image x:Name="SeventeenHoursImage" Source="sunny.png" HorizontalAlignment="Center" Height="50" Margin="0,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="SeventeenHoursText" TextWrapping="Wrap" Text="17:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="178,134,178,213" />
                    <Image x:Name="EighteenHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="224,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="EighteenHoursText" TextWrapping="Wrap" Text="18:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="228,134,128,213" />
                    <Image x:Name="NineteenHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="276,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="NineteenHoursText" TextWrapping="Wrap" Text="19:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="278,134,78,213" />
                    <Image x:Name="TwentyHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="326,84,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="TwentyHoursText" TextWrapping="Wrap" Text="20:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="328,134,28,213" />
                    <Image x:Name="TwentyOneHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="26,168,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="TwentyOneHoursText" TextWrapping="Wrap" Text="21:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="28,218,328,129" />
                    <Image x:Name="TwentyTwoHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="76,168,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="TwentyTwoHoursText" TextWrapping="Wrap" Text="22:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="80,218,276,129" />
                    <Image x:Name="TwentyThreeHoursImage" Source="sunny.png" HorizontalAlignment="Left" Height="50" Margin="123,168,0,0" VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:Name="TwentyThreeHoursText" TextWrapping="Wrap" Text="23:00" Height="30" FontSize="18" FontFamily="Yu Gothic UI Light" Margin="127,218,229,129" />
                </Grid>
                <Image x:Name="RightArrow" Source="arrow.png" HorizontalAlignment="Left" Height="25" Margin="355,265,0,0" VerticalAlignment="Top" Width="26" MouseDown="RightArrowClick" OpacityMask="Black"/>
                <Image x:Name="LeftArrow" Source="arrow.png" HorizontalAlignment="Left" Height="25" Margin="20,265,0,0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.5,0.5" MouseDown="LeftArrowClick">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="180"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image x:Name="RightDataArrow" Source="/arrow.png" HorizontalAlignment="Left" Height="10" Margin="249,300,0,0" VerticalAlignment="Top" Width="12" MouseDown="RightDataArrowClick" OpacityMask="Black"/>
                <Image x:Name="LeftDataArrow" Source="/arrow.png" HorizontalAlignment="Left" Height="10" Margin="147,300,0,0" VerticalAlignment="Top" Width="12" MouseDown="LeftDataArrowClick" OpacityMask="Black" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="180"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image x:Name="RightLocationArrow" Source="/arrow.png" HorizontalAlignment="Left" Height="18" Margin="329,-160,0,0" VerticalAlignment="Top" Width="18" MouseDown="RightLocationArrowClick" OpacityMask="Black"/>
                <Image x:Name="LeftLocationArrow" Source="/arrow.png" HorizontalAlignment="Left" Height="18" Margin="55,-160,0,0" VerticalAlignment="Top" Width="17" MouseDown="LeftLocationArrowClick" OpacityMask="Black" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="180"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>



            </Grid>
        </Canvas>
    </Border>
</Window>